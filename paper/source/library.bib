issn = {1664042X},
journal = {Frontiers in Physiology},
keywords = {Heart rate control,Heart rate modeling,Heart rate prediction,Load control,Phenomenological approaches,Training monitoring,Wearable sensors},
number = {JUN},
title = {{Measurement, prediction, and control of individual heart rate responses to exercise-basics and options for wearable devices}},
