file = {:home/iepoev/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Coquart et al. - 2016 - Submaximal, Perceptually Regulated Exercise Testing Predicts Maximal Oxygen Uptake A Meta-Analysis Study.pdf:pdf},
issn = {11792035},
journal = {Sports Medicine},
number = {6},
