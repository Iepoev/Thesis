file = {:home/iepoev/Downloads/1-s2.0-S144024401830402X-main.pdf:pdf},
issn = {18781861},
journal = {Journal of Science and Medicine in Sport},
keywords = {Adaptation,Autonomic,Cardiovascular,Elite athletes,Parasympathetic},
number = {2},
pages = {222--226},
pmid = {30055959},
publisher = {Sports Medicine Australia},
title = {{Effects of varying training load on heart rate variability and running performance among an Olympic rugby sevens team}},
